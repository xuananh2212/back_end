<h1>danh sach nguoi dung</h1>
<div>
     <a href="#" class="btn btn-primary">Thêm người dùng</a>
</div>
<form>
     <div class="row">
          <div class="col-3">
               <select name="status" class="form-control">
                    <option value="all">Tat ca
                    </option>
                    <option value="active" selected=<%=statusBool==='active' ? 'selected' : '' %> >kich hoat
                    </option>
                    <option value="inactive" selected=<%=statusBool==='inactive' ? 'selected' : '' %> >chua kich hoat
                    </option>
               </select>
          </div>

          <div class="col-7">
               <input class="form-control" name="keyword" id="keyword" type="search" placeholder="tu khoa tim kiem"
                    value=<%=keyword %>>
          </div>
          <div class="col-2 d-grid">
               <button>tim kiem</button>
          </div>

     </div>
</form>
<table class="table table-bordered mt-3">
     <thead>
          <tr>
               <th>STT</th>
               <th>Ten</th>
               <th>Email</th>
               <th>Trang thai</th>
               <th>Thoi gian</th>
               <th width="5%">Sua</th>
               <th width="5%">Xoa</th>
          </tr>
     </thead>
     <tbody>
          <% users.forEach(({id, name, email, status, created_at}, index)=> { %>
               <tr>
                    <td>
                         <%= index + 1 %>
                    </td>
                    <td>
                         <%= name %>
                    </td>
                    <td>
                         <%= email %>
                    </td>
                    <td>
                         <%= status %>
                    </td>
                    <td>
                         <%= moment(created_at).format('DD/MM/YYYY HH:mm:ss') %>
                    </td>
                    <td>
                         <a class="btn btn-warning" href="#">sua</a>
                    </td>
                    <td>
                         <a class="btn btn-danger" href="#">xoa</a>
                    </td>
               </tr>
               <% }) %>

     </tbody>
</table>

