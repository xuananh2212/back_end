<form method="post">
     <div class="mt-3">
          <div class="row mt-3">
               <div class="col-3">
                    <label for="name">Tên:</label>
               </div>
               <div class="col-9">
                    <input type="text" name="name" id="name" class="form-control">
               </div>
          </div>
          <%- req.errors?.name ? `<span class="text-danger">${req.errors.?name}</span>` : '' %>
               <div class="row  mt-3">
                    <div class="col-3">
                         <label for="email">Email:</label>
                    </div>
                    <div class="col-9">
                         <input type="text" name="email" id="email" class="form-control">
                    </div>

               </div>
               <%- req.errors?.email ? `<span class="text-danger">${req.errors.?email}</span>` : '' %>
                    <div class="row  mt-3">
                         <div class="col-3">
                              <span>trạng thái: </span>
                         </div>
                         <div class="col-9">
                              <select name="status" class="form-control">
                                   <option value=0> kich hoat
                                   </option>
                                   <option value=1> chua kich hoat
                                   </option>
                              </select>
                         </div>
                    </div>
     </div>
     <button class="btn btn-primary">Thêm</button>
     <a href="/users" class="btn btn-danger">huỷ</a>
</form>