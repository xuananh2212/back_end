<div class="flex-grow-1">
     <h1>Vui lòng nhập mật khẩu để mở liên kết!</h1>
     <form method="post">
          <div class="form-group mt-2">
               <input name="password" type="password" class="form-control" placeholder="mật khẩu">
               <% if (errorPassword.length) { %>
                    <span class="text-danger">
                         <%= errorPassword %>
                    </span>

                    <% } %>
          </div>
          <div class="form-group mt-2">
               <button class="btn btn-primary">Mở liên kết</button>
          </div>
     </form>
</div>