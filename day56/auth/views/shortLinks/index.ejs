<div class="flex-grow-1">
     <h1>Rút gọn Liên kết</h1>
     <p>Công cụ rút ngắn liên kết miễn phí, nhanh nhất.</p>
     <hr>
     <% if (msgError.length) { %>
          <p class="alter alert alert-danger"><%= msgError %></p>
      
     <% } %>
     <% if (msgSuccess.length) { %>
          <p class="alter alter-success"><%= msgSuccess %></p>
      
     <% } %>
     <div class="row">
          <div class="col-9" style="overflow: auto;">
               <table class="table table-bordered mt-3">
                    <thead>
                         <tr>
                              <th>STT</th>
                              <th>Link rút gọn</th>
                              <th>Link gốc</th>
                              <th>Mật khẩu</th>
                              <th>Lượt truy cập</th>
                              <th>Thời gian tạo</th>
                         </tr>
                    </thead>
                    <tbody>
                         <% shortLinks.forEach(({id, url, urlShort, password, count, createdAt}, index)=> { %>
                              <tr>
                                   <td>
                                        <%= index + 1 %>
                                   </td>
                                   <td>
                                        <a href="/short-link/<%= urlShort %>">
                                             <%=`${MY_URL}/${urlShort}` %>
                                        </a>

                                   </td>
                                   <td>
                                        <a href="<%= url %>">
                                             <%= url %>
                                        </a>

                                   </td>
                                   <td>
                                        <%= password ? password : "không có mật khẩu" %>
                                   </td>
                                   <td>
                                        <%= count %>
                                   </td>
                                   <td>
                                        <%= moment(createdAt, "YYYYMMDD").locale('vi').fromNow() %>
                                   </td>
                              </tr>
                              <% }) %>

                    </tbody>
               </table>

          </div>
          <div class="col-3 p-4 border rounded">
               <form method="post" autocomplete="off">
                    <div class="form-group mt-2">
                         <label for="url"><b>Liên kết</b></label>
                         <input autocomplete="off" name="url" type="text" class="form-control" id="url"
                              placeholder="Rút gọn liên của bạn">
                         <% if (error.length) { %>
                              <span class="text-danger">
                                   <%= error %>
                              </span>
                              <% } %>
                    </div>
                    <div class="form-group mt-2">
                         <label for="password"><b>Mật khẩu(tuỳ chọn)</b></label>
                         <input autocomplete="off" name="password" type="password" class="form-control" id="password"
                              placeholder="Nhập mật khẩu để mở khoá">

                    </div>
                    <div class="form-group mt-2">

                         <div class="form-check form-switch">
                              <input name="checkOptions" value="0" class="form-check-input" type="checkbox"
                                   role="switch" id="safe">
                              <label class="form-check-label" for="safe">Chuyển hướng an
                                   toàn</label>
                         </div>
                         <div class="form-check form-switch">
                              <input name="checkOptions" value="1" class="form-check-input" type="checkbox"
                                   role="switch" id="urlId">
                              <label class="form-check-label" for="safe">Tuỳ chỉnh id liên kết</label>
                         </div>

                         <div class="mb-3">
                              <div class="input-group mt-3" id="show-url" style="display: none;">
                                   <label for="basic-url" class="input-group-text" style="padding:0">
                                   <%= `${MY_URL}/`%>
                                        <input name="id" type="text" class="form-control" id="basic-url"
                                             aria-describedby="basic-addon3 basic-addon4">
                                        </label>
                              </div>
                         </div>
                    </div>
                    <div class="form-group mt-2">
                         <button class="btn btn-primary w-100">Rút gọn</button>
                    </div>

               </form>
          </div>

     </div>



</div>

</div>