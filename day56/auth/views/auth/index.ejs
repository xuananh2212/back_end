
          <div class="p-3 border border-primary rounded" style="max-width: 600px; margin: 30px auto;">
               <form method="post">
                    <% if (msg.length) { %>
                         <div class="alert alert-success">
                              <%= msg %>
                         </div>
                    
                         <% } %>
                         <% if (msgError.length) { %>
                              <div class="alert alert-danger">
                                   <%= msgError %>
                              </div>
                         
                              <% } %>
                    <!-- Email input -->
                    <div class="form-outline mb-4 d-flex gap-3 align-items-center">
                         <label class="form-label" for="form2Example1" style="min-width: 90px;">Email:</label>
                         <div style="flex: 1">
                              <input type="email" id="form2Example1" class="form-control" name="email" />
                              <%- req.errors?.email ? `<span class="text-danger">${req.errors?.email}</span>` : '' %>
                         </div>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4 d-flex gap-3 align-items-center ">
                         <label class="form-label" for="form2Example2" style="min-width: 90px">Password:</label>
                         <div style="flex: 1">
                              <input name="password" type="password" id="form2Example2" class="form-control" />
                              <%- req.errors?.password ? `<span class="text-danger">${req.errors?.password}</span>` : '' %>
                         </div>
                    </div>

                    <!-- 2 column grid layout for inline styling -->
                    <div class="row mb-4">
                         <div class="col d-flex justify-content-center">
                              <!-- Checkbox -->
                              <div class="form-check">
                                   <input class="form-check-input" type="checkbox" value="" id="form2Example31"
                                        checked />
                                   <label class="form-check-label" for="form2Example31"> Remember me </label>
                              </div>
                         </div>

                         <div class="col">
                              <!-- Simple link -->
                              <a href="#!">Forgot password?</a>
                         </div>
                    </div>

                    <!-- Submit button -->
                    <button class="d-block btn btn-primary mx-auto">Sign in</button>

                    <!-- Register buttons -->
                    <div class="text-center mt-4">
                         <p>Not a member? <a href="/dang-ki">Register</a></p>

                    </div>
               </form>
          </div>