<div class="flex-grow-1">
     <h1>Phân Quyền User</h1>
     <hr>
     <% if (success.length) { %>
          <p class="alert alert-success">
               <%= success %>
          </p>
          <% } %>
               <form method="post">
                    <table class="table table-bordered mt-3">
                         <thead>
                              <tr>
                                   <th width="5%">STT</th>
                                   <th><input class="form-check-input" type="checkbox" role="switch" id="permissionAll"
                                             name="permissionAll">
                                   </th>
                                   <th>Tên Role</th>
                              </tr>
                         </thead>
                         <tbody>
                              <% roles.forEach(({id, name}, index)=> { %>
                                   <tr>
                                        <td>
                                             <%= index + 1 %>
                                        </td>
                                        <td>
                                             <div class="form-check form-switch">
                                                  <input value="<%= id %>" name="permission"
                                                       class="form-check-input permission" type="checkbox" role="switch"
                                                       id="<%= name %>" <%=checkRole(user?.Roles, id) ? "checked" : ""
                                                       %>>

                                             </div>

                                        </td>
                                        <td>
                                             <label class="form-check-label" for="<%= name %>">
                                                  <%= name %>
                                             </label>

                                        </td>

                                   </tr>
                                   <% }) %>

                         </tbody>
                    </table>
                    <button class="btn btn-primary">Thêm Quyền cho user</button>
                    <a href="/users" class="btn btn-warning">Quay lại</a>
               </form>
</div>