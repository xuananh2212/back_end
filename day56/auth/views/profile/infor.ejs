<div>
     <h1>Thông Tin Cá Nhân</h1>
     <% if (msg) { %>
          <div class="text-success">
               <%= msg %>
                    </p>

                    <% } %>
                         <form class="mt-4" method="post">
                              <div class="row mb-3">
                                   <label for="inpuName3" class="col-sm-2 col-form-label">Name:</label>
                                   <div class="col-sm-10">
                                        <input name="name" type="text" class="form-control" id="inpuName3"
                                             value="<%= user?.name %>">
                                        <%- req?.errors?.name ? `<span class="text-danger"> ${req?.errors?.name}
                                             </span>` : "" %>
                                   </div>
                              </div>
                              <div class="row mb-3">
                                   <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                                   <div class="col-sm-10">
                                        <input name="email" type="Email" class="form-control" id="inputEmail3"
                                             value="<%= user?.email %>">
                                        <%- req?.errors?.email ? `<span class="text-danger">${req?.errors?.email}
                                             </span>` : "" %>
                                   </div>
                              </div>
                              <div class="row mb-3">
                                   <span class="col-sm-2 col-form-label">Trạng Thái: </span>
                                   <div class="col-sm-10">
                                        <select class="status" name="status">
                                             <option value="0" <%=user?.status===0 ? "selected" : "" %> >chưa kích
                                                  hoạt</option>
                                             <option value="1" <%=user?.status===1 ? "selected" : "" %> >kích hoạt
                                             </option>
                                        </select>
                                   </div>

                              </div>

                              <button type=" submit" class="btn btn-primary">Cập nhập Thông Tin</button>

                              <a class="btn btn-danger" href="/">Quay lại</a>

                         </form>
          </div>